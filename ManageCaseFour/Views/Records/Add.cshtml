@model ManageCaseFour.Models.RecordViewModel

@{
    ViewBag.Title = "Add";
}

<head>
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.12/css/jquery.dataTables.css">
</head>
<h2>Add</h2>


@Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <h4>Department</h4>
    <hr />

<form id="newDeptFacForm" class="well" action="/Records/AddDeptFacility" name="departmentCode, facilityName" method="POST">


    <div class="form-group">
        @Html.LabelFor(model => model.department.departmentCode, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.department.departmentCode, new SelectList(ViewBag.departmentCode, "departmentCode"), new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.department.departmentCode, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <br />
    <p>Add new department here:</p>
    <label>Department</label>
    <input type="text" id="newDepartment" name="departmentCode"><br />
    <br />

    <h4>Facility</h4>
    <hr />
    <div class="form-group">
        @Html.LabelFor(model => model.facility.facilityName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.facility.facilityName, new SelectList(ViewBag.facilityName, "facilityName"), new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.facility.facilityName, "", new { @class = "text-danger" })
        </div>
    </div>

    <p>Add new facililty here:</p>
    <label>Facility</label>
    <input type="text" id="newFacility" name="facilityName"><br />
    <br />


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" id="submitButton" class="btn btn-default" />
        </div>
    </div>

    @*<div>
            <div>
                @ViewBag.error
                @Html.ValidationMessage("error_msg")
            </div>
        </div>*@
    </form>
}