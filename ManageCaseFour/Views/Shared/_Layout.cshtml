    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ManageCase", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "color:#ffc04d; font-family:Armata, san-serif; font-size:30px" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { @style = "color:white; font-family:Economica, sans-serif; font-size:20px" })</li>
                    <li>@Html.ActionLink("New Case", "Create", "Case", new { @style = "color:white;font-family:Economica, sans-serif; font-size:20px" })</li>
                    <li>@Html.ActionLink("View Records", "Index", "Records", new { @style = "color:white;font-family:Economica, sans-serif; font-size:20px" })</li>
                    <li>@Html.ActionLink("Admin", "Admin", "Home", new { @style = "color:white;font-family:Economica, sans-serif; font-size:20px" })</li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />

     

        <footer style="margin-top:100vh; bottom:0">
            <p style="color:#ffc04d">&copy; @DateTime.Now.Year Renuka Vishnubhakta</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

